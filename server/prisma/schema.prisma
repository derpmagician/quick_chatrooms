generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "mysql" // use "mysql" for MariaDB compatibility
  // connection URL moved to prisma.config.ts
}

model User {
  id         String    @id @default(uuid())
  email      String    @unique
  password   String
  username   String    @unique
  avatar     String?
  createdAt  DateTime  @default(now())
  messages   Message[]
  rooms      Room[]    @relation("RoomMembers")
  ownedRooms Room[]    @relation("RoomOwner")

  @@map("users")
}

model Room {
  id         String     @id @default(uuid())
  name       String
  isPrivate  Boolean    @default(false)
  ownerId    String
  owner      User       @relation("RoomOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members    User[]     @relation("RoomMembers")
  messages   Message[]
  createdAt  DateTime   @default(now())

  @@map("rooms")
}

model Message {
  id        String   @id @default(uuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("messages")
}